extends layout
block content
    #content
        p.align-author writen by #{article.author}
        h1= article.title
        p= article.body
        hr
        span 
            a.btn.btn-primary.px-3(href='/articles/edit/'+article._id) Edit
        span 
            a.btn.btn-danger.delete-article(href='#', data-id=article._id) Delete